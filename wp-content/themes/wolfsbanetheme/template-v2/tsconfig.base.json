{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "allowJs": true,
    "moduleResolution": "node",
    "traceResolution": true,
    // "lib": ["DOM", "ES5", "ScriptHost"],
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "./wwwroot/js",
    "removeComments": false, 
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "./src/assets/typings"
        ],
        "types": ["node", "youtube"],

    "watch": true
  },
  "exclude": ["node_modules", "**/node_modules/*", "wwwroot"],
}
